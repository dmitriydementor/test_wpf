<Window x:Class="LearnIT.Views.Dialogs.AddUserForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add new user" MinHeight="275" MinWidth="400"
        Height="250" Width="500"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}" FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
        WindowStartupLocation="CenterOwner"
        
        >
    <Grid Margin="20" MaxWidth="500">
        <StackPanel Orientation="Vertical">
            <TextBlock Margin="10" FontSize="24">Enter user name:</TextBlock>
            <TextBox Margin="10" Name="userNameInput" FontSize="24" MaxLength="16"></TextBox>
            <Button IsDefault="True"
                    MinWidth="200" MinHeight="60" MaxWidth="300" MaxHeight="90" Margin="10"
                        Click="Button_Click"
                        FontSize="24">
                Add
            </Button>
        </StackPanel>
    </Grid>
</Window>
