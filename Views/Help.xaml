<Window x:Class="LearnIT.Views.Help"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LearnIT"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}" FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
        MinHeight="550" MinWidth="700"
       Height="600" Width="900"
         xmlns:fa="http://schemas.fontawesome.io/icons/"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush>
                <GradientStop Offset="0.00" Color="#FFF9EBD7"></GradientStop>
                <GradientStop Offset="1.00" Color="#FFF8DAFD"></GradientStop>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <fa:FontAwesome Icon="Question" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="150" Grid.Row="0"></fa:FontAwesome>
        <TextBlock Grid.Row="1" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center">
            If you want help - call me: 8 063 69 25 668
        </TextBlock>
    </Grid>
</Window>
